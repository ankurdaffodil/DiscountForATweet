<config>
    <modules>
        <Hackathon_DiscountForATweet>
            <version>0.1.0</version>
        </Hackathon_DiscountForATweet>
    </modules>
    <frontend>
        <translate>
            <modules>
                <discountforatweet>
                    <files>
                        <default>DiscountForATweet.csv</default>
                    </files>
                </discountforatweet>
            </modules>
        </translate>
        <routers>
            <discountforatweet>
                <use>standard</use>
                <args>
                    <module>Hackathon_DiscountForATweet</module>
                    <frontName>discountforatweet</frontName>
                </args>
            </discountforatweet>
        </routers>
        <layout>
            <updates>
                <discountforatweet>
                    <file>discountforatweet.xml</file>
                </discountforatweet>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <discountforatweet>
                    <files>
                        <default>DiscountForATweet.csv</default>
                    </files>
                </discountforatweet>
            </modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<discountforatweet translate="title" module="discountforatweet">
											<title>DiscountForATweet</title>
											<sort_order>50</sort_order>
										</discountforatweet>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<discountforatweet>
					<file>discountforatweet.xml</file>
				</discountforatweet>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <discountforatweet>
                <class>Hackathon_DiscountForATweet_Model</class>
            </discountforatweet>
        </models>
        <blocks>
            <discountforatweet>
                <class>Hackathon_DiscountForATweet_Block</class>
            </discountforatweet>
        </blocks>
        <helpers>
            <discountforatweet>
                <class>Hackathon_DiscountForATweet_Helper</class>
            </discountforatweet>
        </helpers>
        <events>
        	<salesrule_rule_condition_combine>
        		<observers>
                    <add_condition_to_sales_rule>
                        <class>discountforatweet/observer</class>
                        <method>addConditionToSalesRule</method>
                    </add_condition_to_sales_rule>
                </observers>
        	</salesrule_rule_condition_combine>
        </events>
    </global>
    <default>
    	<hackathon>
    		<discountforatweet>
	    		<general>
	    			<enable>1</enable>
	    		</general>
    		</discountforatweet>
   		</hackathon>
   	</default>
</config>